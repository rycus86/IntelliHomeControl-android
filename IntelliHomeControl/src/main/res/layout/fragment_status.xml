<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0EE">

    <TextView
        android:id="@+id/status_txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="#CCEE9999"
        android:text="Disconnected"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <ImageView
        android:id="@+id/status_img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_big"
        android:alpha="0.8"/>

    <TextView
        android:id="@+id/status_txt_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/action_settings"
        android:textStyle="bold"
        android:background="@drawable/box_bg"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="-5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <LinearLayout
        android:id="@+id/status_panel_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/box_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-5dp"
        android:layout_marginRight="-5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/status_txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logging in as"/>

        <TextView
            android:id="@+id/status_txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="admin"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>