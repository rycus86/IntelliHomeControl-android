<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/box_bg">

    <ImageView
        android:id="@+id/device_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_unknown"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/device_image"
        android:text="Sample name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="2dp"
        android:drawableRight="@drawable/ic_rename"
        android:drawablePadding="3dp"/>

    <TextView
        android:id="@+id/device_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_name"
        android:layout_toLeftOf="@id/device_image"
        android:text="Sample type"
        android:padding="2dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/device_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_type"
        android:layout_toLeftOf="@id/device_image"
        android:text="Sample state"
        android:padding="2dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/device_last_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_state"
        android:layout_toLeftOf="@id/device_image"
        android:text="2013-12-01 12:00:00"
        android:padding="2dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/device_command_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_last_checkin"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:text="Turn On"/>

    <Button
        android:id="@+id/device_command_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_last_checkin"
        android:layout_toRightOf="@id/device_command_1"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:textColor="@android:color/primary_text_light"
        android:text="Turn Off"/>

    <ImageButton
        android:id="@+id/device_command_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_last_checkin"
        android:layout_toRightOf="@id/device_command_2"
        android:padding="4dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:src="@drawable/ic_core_overflow"/>

</RelativeLayout>